# Docker Compose Environment Variables
# Copy this to .env and fill in your values

# Application
NODE_ENV=development
APP_PORT=3000
LOG_LEVEL=debug

# Database
DB_PASSWORD=your_secure_db_password_here
DB_PORT=5432

# Redis
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Session & Encryption (generate with: openssl rand -base64 32)
SESSION_SECRET=change-this-to-random-32-chars-or-longer
ENCRYPTION_KEY=change-this-to-random-32-chars-or-longer

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/github/callback

# OAuth - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/microsoft/callback

# Monitoring (optional)
SENTRY_DSN=

# pgAdmin (optional, for database management)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
